#include<iostream>
#include<iomanip>
using namespace std;
int main()
{
    int p,r,n;
    float i,a,b,l;
    cin>>p>>r>>n;
    i=((p*n*r)/100);
    a=(p+i);
    b=(i*0.02);
    l=(a-b);
    cout<<fixed<<setprecision(2)<<i<<endl;
    cout<<fixed<<setprecision(2)<<a<<endl;
    cout<<fixed<<setprecision(2)<<b<<endl;
    cout<<fixed<<setprecision(2)<<l;
}
